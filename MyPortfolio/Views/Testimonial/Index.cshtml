@model List<MyPortfolio.Models.Tbl_Testimonials>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>REFERANSLAR</h3>
<br />


<table class="table table table-bordered">

    <tr>
        <th>#</th>
        <th>ImageUrl</th>
        <th>Yorum</th>
        <th>Ad Soyad</th>
        <th>Pozisyon</th>
        <th>Status</th>
        <th>Yorum Tarihi</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TestimonialId</td>
            <td>@item.ImageUrl</td>
            <td>@item.Comment</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.Status</td>
            <td>@item.CommentDate</td>

            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info"><i class="fas fa-pencil-alt"></i> Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-outline-secondary">Yeni Referans Ekle Ekle</a>
