@model List<MyPortfolio.Models.Tbl_Services>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>HİZMETLER</h3>
<br />


<table class="table table table-bordered">

    <tr>
        <th>#</th>
        <th>İkon</th>
        <th>Hizmet Detayı</th>
        <th>Açıklama</th>
        <th>Status</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Status Aktif Et</th>
        <th>Status Pasif Et</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Icon</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger"><i class="fas fa-trash"></i>  Sil</a></td>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-info"><i class="fas fa-pencil-alt"></i> Güncelle</a></td>
            <td><a href="/Service/MakeActiveService/@item.ServiceId" class="btn btn-success"><i class="fas fa-check"></i> Aktif Yap </a></td>
            <td><a href="/Service/MakePassiveService/@item.ServiceId" class="btn btn-secondary"><i class="fas fa-times"></i> Pasif Yap</a></td>
        </tr>
    }

</table>
<br />
<a href="/Service/AddService" class="btn btn-outline-secondary">Yeni Hizmet Ekle</a>