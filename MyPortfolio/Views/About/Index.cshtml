@model  List<MyPortfolio.Models.Tbl_Abouts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<h3>HAKKIMDA</h3>
<br />

<table class="table table table-bordered">

    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.ImageUrl</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
            <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-info"> <i class="fas fa-pencil-alt"></i> Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/About/AddAbout" class="btn btn-outline-secondary">Yeni hakkımda Ekle</a>


