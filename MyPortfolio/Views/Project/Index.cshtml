@model List<MyPortfolio.Models.Tbl_Projects>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>PROJELER</h2>
<table class="table table table-bordered">

    <tr>
        <th>#</th>
        <th>Image Url</th>
        <th>Proje Adı</th>
        <th>Category ID</th>
        <th>Github Url</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProjectId</td>
            <td>@item.ImageUrl</td>
            <td>@item.ProjectName</td>
            <td>@item.Tbl_Categories.CategoryName</td>
            <td>@item.GithubUrl</td>
            <td><a href="/Project/DeleteProject/@item.ProjectId" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
            <td><a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-info"><i class="fas fa-pencil-alt"></i> Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Project/AddProject" class="btn btn-outline-secondary">Yeni Proje Ekle</a>


