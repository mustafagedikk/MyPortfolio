@model MyPortfolio.Models.Tbl_Projects
@{
    ViewBag.Title = "UpdateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>PROJE GÜNCELLE</h2>


<form method="post">

    <input type="hidden" name="ProjectId" value="@Model.ProjectId"/>
    <label>Image Url</label>
    <input type="text" value="@Model.ImageUrl" name="ImageUrl" class=" form-control" />
    <br />
    <label>Proje Adı</label>
    <input type="text" value="@Model.ProjectName" name="ProjectName" class="form-control" />
    <br />
    <label>Kategori Adı</label>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.category, "Kategori Seçiniz", new { @class = "form-control" })
    <br />
    <label>Github Url</label>
    <input type="text" value="@Model.GithubUrl" name="GithubUrl" class="form-control" />
    <br />
    <button class="btn btn-secondary">KAYDET</button>


</form>
