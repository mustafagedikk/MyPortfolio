@model List<MyPortfolio.Models.Tbl_Features>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>ÖZELLİKLER</h3>
<br />


<table class="table table table-bordered">

    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Ünvan</th>
        <th>Resim Url</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td>@item.NameSurname</td>
            <td>@item.Title</td>
            <td>@item.ImageUrl</td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Feature/AddFeature" class="btn btn-outline-secondary">Yeni hakkımda Ekle</a>
