@model List<MyPortfolio.Models.Tbl_Contacts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>İLETİŞİM</h3>
<br />

<table class="table table table-bordered">

    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Adres</th>
        <th>İletişim</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ContactId</td>
            <td>@item.NameSurname</td>
            <td>@item.Adress</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td><a href="/Contact/DeleteContact/@item.ContactId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Contact/UpdateContact/@item.ContactId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Contact/AddContact" class="btn btn-outline-secondary">Yeni hakkımda Ekle</a>
