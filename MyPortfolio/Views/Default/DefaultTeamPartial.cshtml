@model List<MyPortfolio.Models.Tbl_Teams>
@{
    Layout = null;
}

<div class="team" id="team">
    <div class="container">
        <div class="section-header text-center wow zoomIn" data-wow-delay="0.1s">
            <p>Takım Arkadaşlarım </p>
            @*<h2>Arkadaşlarım</h2>*@
        </div>
        <div class="row">

            @foreach (var item in Model)
            {

                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.0s">
                    <div class="team-item">
                        <div class="team-img">
                            <img src="@item.ImageUrl" alt="Image">
                        </div>
                        <div class="team-text">
                            <h2>@item.NameSurname</h2>
                            <h4>@item.Title </h4>
                            <p>
                                @item.Description
                            </p>
                            <div class="team-social">
                                <a class="btn" href="@item.TwitterUrl"target="_blank"><i class="fab fa-twitter"></i></a>
                                <a class="btn" href="@item.FacebookUrl"target="_blank"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn" href="@item.LinkedinUrl" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                                <a class="btn" href="@item.İnstagramUrl" target="_blank"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>