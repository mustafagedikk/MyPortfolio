@model  List<MyPortfolio.Models.Tbl_Exp>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h3>DENEYİMLER</h3>
<br />

<table class="table table table-bordered">

    <tr>
        <th>#</th>
        <th>Başlangıç Yılı</th>
        <th>Bitiş Yılı</th>
        <th>Pozisyon</th>
        <th>Açıklama</th>
        <th>şirket</th>
        <th>Lokasyon</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ExpId</td>
            <td>@item.StarYear</td>
            <td>@item.AndYear</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Company</td>
            <td>@item.Location</td>
            <td><a href="/Experience/DeleteExperience/@item.ExpId" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a></td>
            <td><a href="/Experience/UpdateExperience/@item.ExpId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }

</table>
<br />
<a href="/Experience/AddExperience" class="btn btn-outline-secondary">Yeni Deneyim Ekle</a>


